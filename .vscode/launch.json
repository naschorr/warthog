{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run: Warthog - Replay (Overwrite)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/warthog.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--overwrite"
            ]
        },
        {
            "name": "Run: Warthog - Replay",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/warthog.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": []
        },
        {
            "name": "Run: War Thunder Vehicle Data Processor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/warthunder_vehicle_data_processor.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--wpcost-blkx", "${workspaceFolder}/data/mined/2.47.0.43/wpcost.blkx",
                "--unittags-blkx", "${workspaceFolder}/data/mined/2.47.0.43/unittags.blkx",
                "--hangar-blkx", "${workspaceFolder}/data/mined/2.47.0.43/hangar.blkx",
                "--units-csv", "${workspaceFolder}/data/mined/2.47.0.43/units.csv",
                "--output", "${workspaceFolder}/data/processed_vehicle_data/processed_vehicle_data.2.47.0.43.json"
            ]
        },
        {
            "name": "Run: War Thunder Replay Copier",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/warthunder_replay_copier.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--output-dir-path", "${workspaceFolder}/data/replays"
            ]
        },
        {
            "name": "Run: Warthog - Replay Data",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/warthog.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--replay-dir-path", "${workspaceFolder}/data/replays",
                "--overwrite"
            ]
        }
    ]
}