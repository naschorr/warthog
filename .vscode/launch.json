    "version": "0.2.0",
    "configurations": [
        {
            "name": "ReplayDataGrabber - War Thunder (Overwrite)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/replay_data_grabber/warthog_replay_data_grabber.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--overwrite"
            ]
        },
        {
            "name": "ReplayDataGrabber - War Thunder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/replay_data_grabber/warthog_replay_data_grabber.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": []
        },
        {
            "name": "VehicleDataGrabber",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/vehicle_data_grabber/warthog_vehicle_data_grabber.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": []
        },
        {
            "name": "Dev - ReplayDataGrabber - Copied Replays",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/replay_data_grabber/warthog_replay_data_grabber.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--replay-dir-path", "${workspaceFolder}/data/replays",
                "--overwrite"
            ]
        },
        {
            "name": "Dev - ReplayDataCopier",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/replay_data_copier/warthog_replay_data_copier.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${workspaceFolder}"},
            "stopOnEntry": false,
            "redirectOutput": true,
            "args": [
                "--output-dir-path", "${workspaceFolder}/data/replays"
            ]
        }
    ]
}